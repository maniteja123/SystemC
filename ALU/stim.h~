#include "systemc.h" 
SC_MODULE(stim) {
	sc_out<bool> opA,opB,result,zero;

	void StimGen()   {
		opA.write(111);     
		opB.write(101);
		wait();

		opA.write(false);     
		Y.write(true);     
		Z.write(true);
		wait();     
	
		X.write(true);     
		Y.write(false);     
		Z.write(true);
		wait();     

		X.write(true);     
		Y.write(true);     
		Z.write(true);
		wait();     
		
		sc_stop();   
	}   

	SC_CTOR(stim)   {
		SC_THREAD(StimGen);     
		sensitive << Clk.pos();   
	} 
};
